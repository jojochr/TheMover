<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TheMover.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:design="clr-namespace:TheMover.UI.ViewModels.Design"
        xmlns:controls="clr-namespace:TheMover.UI.Views.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TheMover.UI.Views.MainView"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="TheMover.UI">
    <Design.DataContext>
        <design:DesignMainWindowViewModel></design:DesignMainWindowViewModel>
    </Design.DataContext>

    <StackPanel>
        <TextBlock>Hello world!</TextBlock>

        <Grid ColumnDefinitions="*, 2*">
            <controls:PackageDetailsControl Grid.Column="0" DataContext="{Binding PackageOperationsViewModel, Mode=OneWay}" />
            <controls:PackageInListControl Grid.Column="1" DataContext="{Binding PackageOperationsViewModel, Mode=OneWay}" />
        </Grid>
    </StackPanel>

</Window>
