<UserControl x:Class="TheMover.UI.Controls.PackagesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheMover.UI.Controls"
             xmlns:vm="clr-namespace:TheMover.UI.ViewModel"
             xmlns:design="clr-namespace:TheMover.UI.ViewModel.Design"
             xmlns:controls="clr-namespace:TheMover.UI.Controls"
             mc:Ignorable="d design"
             d:DesignHeight="450" d:DesignWidth="200" d:Background="White"
             d:DataContext="{d:DesignInstance design:DesignPackagesListViewModel, IsDesignTimeCreatable=True}">
    <ListView ItemsSource="{Binding MovablePackages}" SelectedItem="{Binding SelectedPackage}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="2" BorderBrush="LightBlue">
                    <Label Content="{Binding PackageName}"/>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
